{
  "version": 2,
  "functions": {
    "api/health.js": {
      "maxDuration": 30
    },
    "api/test-deployment.js": {
      "maxDuration": 30
    },
    "api/auth/login.js": {
      "maxDuration": 30
    },
    "api/auth/register.js": {
      "maxDuration": 30
    },
    "api/auth/refresh.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/manifest.json", "dest": "/manifest.json" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" },
    { "src": "/asset-manifest.json", "dest": "/asset-manifest.json" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}

